<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de" lang="de">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    	<title><% response.title %></title>
    
		<meta name="author-personal" content="David Davorin Barudzija" />
		<meta name="description" content="Management Interface of Game Organization" />
     	<meta name="language" content="de" />
		<meta name="robots" content="index, follow" />
		<meta charset="utf-8">
    	
		<!-- CSS -->
		<link rel="stylesheet" href="/static/css/fullcalendar.css" type="text/css" />
		<link rel="stylesheet" href="/static/css/jquery-ui-1.8.17.custom.css" type="text/css">
		<link rel="stylesheet" href="/static/css/style/main.css" type="text/css"  />
		
		<!-- Javascript -->
		<script src="/static/scripts/jquery-1.5.2.min.js"></script>
		<script src="/static/scripts/fullcalendar.js"></script>
		<script src="/static/scripts/jquery-ui-1.8.17.custom.min.js"></script>
		
		<script>
			$(function() {
				$('#dialog-message').dialog({modal: true});
			}
		</script>
		
		<script>
			$(function() {
			 	document.getElementById('hideButton').style.visibility= <% response.hidebutton %>; // hide 
			});
		</script>
		
		
		<script>
			$(function() {
				$( "#appointmentdate" ).datepicker({
                    altField: "#datePicked",
					altFormat: "DD, d MM, yy"	
				});
			});
		</script>
	
	
	
	
		<script>
			$(function() {
				$( "#from" ).datepicker({
                    altField: "#datePicked",
					altFormat: "DD, d MM, yy"	
				});
				$( "#to" ).datepicker({
                    altField: "#datePicked",
					altFormat: "DD, d MM, yy"	
				});
			});
		</script>
		
		<script>
			$(function() {
				$( "#radio" ).buttonset();
				$( "#check" ).button();
				$( "#format" ).buttonset();
			});
		</script>
		
		
		<script type="text/javascript">
			function showHideCommentsNews(div) {
				var d = '#' + div;

				if (document.getElementById(div).style.display == "none") {
					$(d).show("normal");
				} else {
					$(d).hide("normal");
				}
			}
		</script>
		
		<script type="text/javascript">
			$(document).ready(function() {
		    	// page is now ready, initialize the calendar...

		    	$('#calendar').fullCalendar({
		        	// put your options and callbacks here
		    	
		    	
		    	header: {
                 left: 'today',
                 center: 'prev,title,next',
                 right: 'month,agendaWeek,agendaDay'
             	},
             	
             	selectable: true,
				selectHelper: true,
				
             	select: function selectedarea(startDate, endDate, allDay, jsEvent, view) {
             				
             				
             				//res.data.dstart = startDate;
             				
             				// get startdate and enddate 
             				//alert("Event Start date" + startDate);
				            //alert("Event End date" + endDate);
             	
             	
							// var calendars = getAjaxData('calendar/calendarsJson');
             				
             				
             				//var dd = $('#calendar').fullCalendar('getDate');
             				
      			 			$("#start_time").text(startDate);
      			 	
      						$('#myDialog').load(event.startDate).dialog(
      							
      						
      							{ 
      							title: 'Neuen Termin anlegen',
      							width: 300,
          						height:500
        						}
        					);
        					
        					
        					return startDate;
      
        		}, 
        		
        			events: [
        			
        			<% response.calevents %>
        			//{ title: 'Training', start: 'Jul 14 2012 12:30:00', end: 'Jul 14 2012 16:30:00', allDay: false, editable: false },
        			//{ title: 'Spiel', start: 'Jul 18 2012 12:30:00', end: 'Jul 18 2012 16:30:00', allDay: false, editable: false }
        			
        			// other events here
        			
    				],
    				
    			
    				eventClick: function(calEvent, jsEvent, view) {
    				
    				
    					$('#myDialog').load().dialog(
      							{
      							width: 300,
          						height:500
        						}
        					);
        					
        					return false;
        					
    				
   					}
 
    			
		        	
		    	})
             	
             	

			});
		</script>
	
		<script type ="text/javascript">
			$(function() {
				var availableTags = [
					<% response.names %>
				];
				$( ".names" ).autocomplete({
					source: availableTags
				});
			});
		</script>
    
</head>

<body class="bg">

	<!-- Wrapper start -->
	<div id="wrapper">

		<div id="header">
			<div id="header_top">
				<div id="header_top_content">
					<p class="right">
						<a href="#">Kundenbereich</a>
						<span style="color:#FFF">|</span>
						<a href="#">Service &amp; Support</a>
					</p>

						<p class="left">
							<strong style="font-size:16px">Migo + Logo</strong>
						</p>
				</div>
			</div>	
		</div>
		
		<div id="content">
			
			
			<!-- +++++++++++++++++++++++ -->
			<!-- Statusleiste -->
			<!-- +++++++++++++++++++++++ -->
			<div id="content_box" style="margin-top:20px">
				<div id="content_box_txt">
					<% response.loginMsg %>
					<div class="clear"></div>
				</div>
				
				<div id="content_box_txt" style='margin-top:10px'>
					<div class="left cleft" style='width:100%'>
						<% response.groupName %>
						<p style='float:right; margin:2px 5px 0 0'><% response.allGroups %></p>
					</div>
					<div class="clear"></div>
				</div>	
			</div>
			<div class="clear"></div>
			
		
			<!-- +++++++++++++++++++++++ -->
			<!-- Menu -->
			<!-- +++++++++++++++++++++++ -->
			<% response.menu %>
			
			
			<!-- +++++++++++++++++++++++ -->
			<!-- News -->
			<!-- +++++++++++++++++++++++ -->
			<% response.allNews %>
			
			
			<!-- +++++++++++++++++++++++ -->
			<!-- Appointments -->
			<!-- +++++++++++++++++++++++ -->
			<% response.allAppointments %>
			
			
			<input type="text" name="selectedarea" hidden="true" value = '123'>
		
			<!-- +++++++++++++++++++++++ -->
			<!-- Calendar -->
			<!-- +++++++++++++++++++++++ -->
			<!-- Kalender anzeigen -->
			<div id="<% response.calendar %>" style="width:670px; margin-bottom:10px;"></div>
		
		
			<!-- +++++++++++++++++++++++ -->
			<!-- Messages -->
			<!-- +++++++++++++++++++++++ -->
			<% response.allMessages %>
			
		
			<!-- +++++++++++++++++++++++ -->
			<!-- Mitglieder -->
			<!-- +++++++++++++++++++++++ -->
			<!-- Alle Mitglieder auflisten -->
			<% response.listUsers %>
		
			<!-- +++++++++++++++++++++++ -->
			<!-- Gruppeninformationen -->
			<!-- +++++++++++++++++++++++ -->
			<% response.groupInfo %>
			
			<div id="dropbox">
				<% response.dropbox %>
			</div>
			
		</div>
		
		<div id="footer" style="position:relative; float:left; margin-top:40px">
			<ul>
				<li><a href="#">Home</a></li>
				<li><a href="#">Hilfe</a></li>
				<li><a href="#">Impressum</a></li>
				<li><a href="#">AGB</a></li>
				<li><a href="#">Kontakt</a></li>
				<li><a href="#">Datenschutz</a></li>
				<li>&copy; 2012 Migo</li>
			</ul>
		</div>
		
	</div>
	
	<div id="myDialog" hidden="true"><% response.calinfo %></div>
	
	
</body>
</html>