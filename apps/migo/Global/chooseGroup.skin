<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de" lang="de">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    	<title><% response.title %></title>
    
		<meta name="author-personal" content="David Davorin Barudzija" />
		<meta name="author-mail" content="davorindavid.barudzija@gmail.at" />
		<meta name="description" content="Management Interface of Game Organization" />
     	<meta name="language" content="de" />
		<meta name="robots" content="index, follow" />
    	
		<link rel="stylesheet" href="/static/main.css" type="text/css"  />
    	<script src="/static/jQuery/jquery.js" type="text/javascript"></script>
    
</head>

<body>
	<div id="main">
		
		<h1>MIGO</h1>
		
		<div style="padding:10px; border:1px solid #000; width:650px; margin-bottom:10px;">
			<% response.loginMsg %>
		</div>
		
		<% response.myGroupsDiv %>
		
		<div style="padding:10px; border:1px solid #000; width:650px; margin-bottom:10px;">
			<form action="<% root.href action="chooseGroup" %>" method="POST"> 
				<p>Zu einer Gruppe beitreten</p>
		    	<select name="groupName">
					<% response.optionGroups%>
		    	</select>
				<input type="submit" name="chooseGroup" value="Beitreten"> 
			</form>
			<br />
			<% response.groupInquiry %>
		</div>
		
		<div style="padding:10px; border:1px solid #000; width:650px; margin-bottom:10px;">
			<% response.newGroup %>
		</div>
					
	</div>
</body>
</html>